@model Ares.Models.AuctionItem

@{
    ViewData["Title"] = "Add a New Auction Item";
}

<h2>Create a new Auction Item</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuctionEndTime" class="control-label">Active Until</label>
                <input asp-for="AuctionEndTime" class="form-control" />
                <span asp-validation-for="AuctionEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemState" class="control-label">Status</label>
                <select asp-for="ItemState" asp-items="Html.GetEnumSelectList<AuctionItemState>()" class="form-control"></select>
                <span asp-validation-for="ItemState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
